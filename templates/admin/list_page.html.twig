{% extends 'admin/admin_layout.html.twig' %}

{% block title %} Hello World Page {% endblock %}

{% block content %}
    <div class="btn-group mr-2 float-right">
        <form name="form_action" action="{{ form_action }}" method="GET">
            <div class="btn-group mr-2 float-right">
                <button type="submit" class="btn btn-primary btn-lg">{{ btn_submit }}</button>
            </div>
        </form>
    </div>
    <section style="padding: 3rem 0;">
        <h2>{{ form_title }}</h2>
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>Позиция</th>
                            <th>#ID</th>
                            <th>Название страницы</th>
                            <th>Редактировать страницу</th>
                            <th>Удалить страницу</th>
                            <th>Статус</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for page in pages %}
                            <tr>
                                <td style="width: 75px;"><input style="width: inherit;" value="{{ page.getOrderRange }}"></td>
                                <td>{{ page.id }}</td>
                                <td>{{ page.name }}</td>
                                <td><a href="{{ update_url }}/{{ page.id }}">{{ update_url }}/{{ page.id }}</a></td>
                                <td><a href="{{ update_url }}/{{ page.id }}/delete">delete {{ update_url }}/{{ page.id }}/delete</a></td>
                                <td>{{ states[page.state] }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

