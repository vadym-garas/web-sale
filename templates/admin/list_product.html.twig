{% extends 'admin/admin_layout.html.twig' %}

{% block title %} Hello World Page {% endblock %}

{% block content %}
    <div class="btn-group mr-2 float-right">
        <form name="form_action" action="{{ form_action }}" method="GET">
            <div class="btn-group mr-2 float-right">
                <button type="submit" class="btn btn-primary">{{ btn_submit }}</button>
            </div>
        </form>
    </div>
    <section style="padding: 3rem 0;">
        <h2>{{ form_title }}</h2>
            <div class="table-responsive">
                <table class="table table-striped table-sm">
                    <thead>
                        <tr>
                            <th>Позиция</th>
                            <th>#ID</th>
                            <th>Product Code</th>
                            <th>Price</th>
                            <th>URL to update Product:</th>
                            <th>URL to delete Product:</th>
                            <th>State</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td style="width: 75px;"><input style="width: inherit;" value="{{ product.getOrderRange }}"></td>
                            <td>{{ product.id }}</td>
                            <td>{{ product.code }}</td>
                            <td>{{ product.price }}</td>
                            <td>
                                <a href="{{ update_url }}/{{ product.id }}" type="button" class="btn btn-outline-success">
                                    {{ update_url }}/{{ product.id }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ update_url }}/{{ product.id }}/delete" class="btn btn-outline-danger">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                                    </svg> {{ update_url }}/{{ product.id }}/delete
                                </a>
                            </td>
                            <td>{{ states[product.state] }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

