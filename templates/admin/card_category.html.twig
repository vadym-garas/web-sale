{% extends 'admin/admin_layout.html.twig' %}

{% block title %} Hello World Page {% endblock %}

{% block content %}


<form name="form_action" action="{{ form_action }}" method="post">
    <b><legend class="col-form-label">Select Category Page</legend></b>
    <hr>

    <div class="row">
        <div class="col  col-md-3">
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Порядок сортировки</span>
                </div>
                <input name="range" type="number" class="form-control" value="{{ range }}">
            </div>
        </div>
        <div class="col  col-md-9">
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Название категории</span>
                </div>
                <input name="name" value="{{ name }}" type="text" class="form-control input-group-prepend" placeholder="input category name">
            </div>
        </div>
    </div>

    <br>
    <hr>
    <b><legend class="col-form-label">Выбрать единицу измерения</legend></b>

    <div class="input-group">
        {% for key,value in units %}
            {% set checked = '' %}
            {% if (unit == value) %}
                {% set checked = 'checked' %}
            {% endif %}
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input {{ checked }} value={{ value }} class="form-check-input" type="radio" name="unit">
                    {{ key }}
                </label>
            </div>
        {% endfor %}
    </div>
    <br>
    <hr>
    <b><legend class="col-form-label">Select state</legend></b>

    <div class="input-group">
        {% for key,value in states %}
            {% set checked = '' %}
            {% if (state == value) %}
                {% set checked = 'checked' %}
            {% endif %}
            <div class="form-check form-check-inline">
                <label class="form-check-label">
                    <input {{ checked }} value={{ value }} class="form-check-input" type="radio" name="state">
                    {{ key }}
                </label>
            </div>
        {% endfor %}
    </div>
    <hr>
    <br>
    <div class="btn-group mr-2 float-left">
        <button type="submit" class="btn btn-primary btn-lg">{{ btn_submit }}</button>
    </div>

</form>

    </section>

</form>


{% endblock %}
