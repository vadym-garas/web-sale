{% extends 'base.html.twig' %}

{% block title %} Hello World Page {% endblock %}

{% block body %}

    <section>
        <div class="container" style="padding: 3rem 0;">
            <div class="row">
                <div class="alert alert-success col-6" role="alert">
                    <h4 class="alert-heading">{{form_title}}</h4>
                    <hr>
                    <form name="form_action" action="{{ form_action }}" method="post">
                        <div class="form-group">
                            <input name="category_name" type="text" class="form-control input-group-prepend" placeholder="input category name">
                        </div>

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Select parent category</label>
                            </div>
                            <select name="category_name"  class="custom-select">
                                {% for key,value in categories %}
                                    <option value={{ value }}>{{ key }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Select state</label>
                            </div>
                            <select name="state"  class="custom-select" id="inputGroupProductStateSelect">
                                {% for key,value in states %}
                                    <option value={{ value }}>{{ key }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
