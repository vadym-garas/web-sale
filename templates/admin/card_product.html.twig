{#            {{ form_start(form) }}#}

            <b><legend class="col-form-label">Выбрать категорию товара</legend></b>
            <div class="input-group">
                {% for key,value in categories %}
                    {% set checked = '' %}
                    {% if (select == key) %}
                        {% set checked = 'checked' %}
                    {% endif %}
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input {{ checked }} value={{ key }} class="form-check-input" type="radio" name="category">
                            {{ value }}
                        </label>
                    </div>
                {% endfor %}
