            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Артикул товара</span>
                </div>
                <input name="code" value="{{ code }}" type="text" class="form-control input-group-prepend" placeholder="input product code">
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Наименование товара</span>
                </div>
                <input name="name" value="{{ name }}" type="text" class="form-control input-group-prepend" placeholder="input product nane">
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Цена товара</span>
                </div>
                <input name="price" value="{{ price }}" type="number" class="form-control input-group-prepend" placeholder="input product price">
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Себестоимость</span>
                </div>
                <input name="cost" value="{{ cost }}" type="number" class="form-control input-group-prepend" placeholder="input product cost">
            </div>

