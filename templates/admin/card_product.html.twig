                {% for key,value in states %}
                    {% set checked = '' %}
                    {% if (state == value) %}
                        {% set checked = 'checked' %}
                    {% endif %}
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input {{ checked }} value={{ value }} class="form-check-input" type="radio" name="state" id={{ value }}>
                            {{ key }}
                        </label>
                    </div>
                {% endfor %}
            </div>
            <hr>
            <br>
            <div class="btn-group mr-2 float-left">
                <button type="submit" class="btn btn-primary btn-lg">{{ btn_submit }}</button>
